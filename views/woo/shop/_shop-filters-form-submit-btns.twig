{% import "_snippets.twig" as snippets %}

<div class="uk-background-muted uk-padding-small">
  <ul class="uk-flex uk-flex-middle uk-flex-center uk-child-width-auto uk-grid-small" uk-grid>
    <li class="advform-submit">
      <input type="submit" value="{{ snippets.apply_btn_text()|e('esc_html') }}" class="uk-button uk-button-primary uk-border-rounded">
    </li>
    <li class="advform-reset">
      <input id="adv_reset" type="reset" value="{{ snippets.clear_btn_text()|e('esc_html') }}" class="uk-button uk-button-default uk-border-rounded">
    </li>
  </ul>
</div>
