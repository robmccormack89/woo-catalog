{% extends 'shop.twig' %}

{% block breads %}
{% endblock %}

{% block archive_content %}
  <div class="uk-background-muted">
    <div class="uk-container">
      <div class="shop-container uk-section uk-section-small">
        {% block shop_loop %}
          <div class="products-loop uk-position-relative">
            <div id="ProductsGrid" class="filters-container">
              <div class="uk-child-width-1-2 uk-child-width-1-6@m uk-flex uk-flex-middle uk-flex-center" uk-grid>
                {% for term in terms %}
                  {% include '_tease-term.twig' %}
                {% endfor %}
              </div>
            </div>
          </div>
        {% endblock %}
      </div>
    </div>
  </div>
{% endblock %}