{#
/**
 * Block Name: Cats section
 *
 * This is the template that displays the Cats section block.
 */
#}

{% extends "block.twig" %}

{% if fields.cat_image %}
  {% set the_image = Image(fields.cat_image).src|resize(86, 86) %}
  {% set the_image_alt = Image(fields.cat_image).alt %}
{% endif %}
{% set def_image_src = the_image|default('https://via.placeholder.com/86x86?text=+') %}
{% set def_image_alt = the_image_alt|default('') %}

{% set all_categories_link = fields.all_categories_link|default('#') %}
{% set all_categories_text = fields.all_categories_text|default('All Categories') %}

{% block block_content %}

  <div id="CatsSection">
    <div class="home-cats-wrap theme-border-top">
      <div class="home-cats">
        <div class="uk-grid-collapse uk-child-width-1-1 uk-child-width-1-2@s uk-child-width-1-3@m uk-child-width-1-4@l uk-child-width-1-5@xl theme-border-left uk-grid-match uk-grid" uk-grid>
          
          {% for term in cats %}
            {% include '_cats-section-tease.twig' %}
          {% endfor %}
          
          {% include '_cats-section-all.twig' %}
          
        </div>
      </div>
    </div>
  </div>
{% endblock %}